# Environment Configuration for The Last Neuron

# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/the_last_neuron
POSTGRES_DB=the_last_neuron
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-password-here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# MongoDB Configuration (Optional)
MONGODB_CONNECTION_STRING=mongodb://localhost:27017/the_last_neuron

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_LIFETIME=15  # minutes
JWT_REFRESH_TOKEN_LIFETIME=7  # days

# Encryption Settings
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# External APIs
OPENAI_API_KEY=your-openai-api-key-here  # For future voice features
HUGGINGFACE_API_TOKEN=your-huggingface-token-here

# Media Storage
MEDIA_ROOT=media/
STATIC_ROOT=staticfiles/

# Email Configuration (for notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn-here
LOG_LEVEL=INFO

# Machine Learning Settings
ML_MODEL_PATH=models/
PERSONALITY_MODEL_RETRAIN_HOURS=72
RL_LEARNING_RATE=0.001
RL_BATCH_SIZE=64

# Security Settings
ALLOWED_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Development Settings
DJANGO_SETTINGS_MODULE=config.settings.development
