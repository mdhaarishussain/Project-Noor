# Bondhu AI Environment Example
# Copy this to .env and fill in the real values. Keep secrets out of git.

# Supabase
SUPABASE_URL=
SUPABASE_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# OpenAI / Anthropic
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=2000

# Third-party API keys
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_REDIRECT_URI=http://localhost:8000/api/v1/auth/spotify/callback
SPOTIFY_SCOPE=user-read-recently-played user-library-read user-top-read user-read-playback-state
YOUTUBE_API_KEY=
YOUTUBE_QUOTA_LIMIT=10000
STEAM_API_KEY=

# Agent configuration
AGENT_TIMEOUT=30
AGENT_MAX_RETRIES=3
CONCURRENT_AGENTS=3
AGENT_MEMORY_LIMIT=1000

# Rate limiting
SPOTIFY_RPM=100
YOUTUBE_RPM=100
STEAM_RPM=200
OPENAI_RPM=3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=logs/bondhu.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5

# App / API server
API_HOST=localhost
API_PORT=8000
API_DEBUG=false

# Security
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Redis / Celery (use 'redis' when running in Docker)
REDIS_URL=redis://redis:6379
CELERY_BROKER_URL=redis://redis:6379
CELERY_RESULT_BACKEND=redis://redis:6379

# Rate limiting/monitoring
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
MONITORING_ENABLED=true
ALERT_EMAIL=admin@bondhuai.com